# 動作モード: LIVE | DRY_RUN | BACKTEST
MODE=DRY_RUN

# 取引所: binance | bybit
EXCHANGE=bybit

# API認証情報（LIVE時のみ必須）
API_KEY=
API_SECRET=

# DeepSeek API（ペアトレードAI判定用。設定時は本物のAPI、未設定時はモック）
DEEPSEEK_API_KEY=

# CryptoPanic API（ニュース取得用。未設定時はRSSフォールバック）
CRYPTOPANIC_API_KEY=

# 運用パラメータ
INITIAL_CAPITAL=10000
MAX_POSITIONS=2
TAKER_FEE=0.001
SLIPPAGE=0.0005

# バックテスト用（BACKTESTモード時）
# 期間指定でAPIコスト節約可能。例: 死の谷期間 2026-01-25 〜 2026-02-15
BACKTEST_START=2026-01-25
BACKTEST_END=2026-02-15
BACKTEST_SYMBOLS=BTC/USDT,ETH/USDT

# AWS デプロイ用（Lambda 実行時は SAM が自動設定）
# ops.py 実行時はローカル .env で設定
DYNAMODB_TABLE=
SLACK_WEBHOOK_URL=
LOG_TTL_DAYS=90

# ops.py 用（デプロイ後のテーブル名・関数名）
# 例: ai-crypto-trader-CryptoTrader
# LAMBDA_FUNCTION_NAME=ai-crypto-trader-CryptoTrader
